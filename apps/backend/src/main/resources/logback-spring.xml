<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Configuração para capturar TODOS os logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                    <fieldName>@timestamp</fieldName>
                </timestamp>
                <pattern>
                    <pattern>
                        {"level":"%level","logger":"%logger{36}","thread":"%thread","message":"%msg","traceId":"%X{traceId}","spanId":"%X{spanId}"}
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Arquivo para TODOS os logs -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/all-logs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/all-logs-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Arquivo ESPECÍFICO para ERROS -->
    <appender name="FILE_ERRORS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/errors-only.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/errors-only-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Arquivo ESPECÍFICO para DEBUG -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/debug-only.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/debug-only-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Arquivo ESPECÍFICO para o LoginController -->
    <appender name="FILE_LOGIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/login-controller.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/login-controller-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger específico para o LoginController -->
    <logger name="br.com.backend.controller.LoginController" level="WARN" additivity="false">
        <appender-ref ref="FILE_LOGIN"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger para capturar TODOS os erros -->
    <logger name="br.com.backend" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_ERRORS"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger para Spring Security -->
    <logger name="org.springframework.security" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger para Hibernate -->
    <logger name="org.hibernate" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger para PostgreSQL -->
    <logger name="org.postgresql" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root logger para capturar tudo -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_ALL"/>
        <appender-ref ref="FILE_ERRORS"/>
    </root>

</configuration>
